{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["renderer/src/*"],
      "react-hook-form": ["renderer/src/lib/types/react-hook-form"],
      "electron-store": ["renderer/src/lib/types/electron-store"],
      "react-router-dom": ["renderer/src/lib/types/react-router-dom"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["renderer/src", "electron", "scripts"],
  "exclude": ["dist", "dist", "release", "node_modules"]
}
